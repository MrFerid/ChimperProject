@model Chimper.Areas.ViewModel.TestViewModel
<div class="container-fluid">

    <!-- Form -->

    <div class="row mt-4">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 offset-0">

            @using (Html.BeginForm(Model.Action, "Test", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Test.Name)
                    @Html.TextBoxFor(m => m.Test.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Test.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Test.Surname)
                    @Html.TextBoxFor(m => m.Test.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Test.Surname)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Test.Photo)<br />
                    <input type="file" name="file" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Test.Text)
                    @Html.TextAreaFor(m => m.Test.Text, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Test.Text)
                </div>

                @Html.HiddenFor(m => m.Test.id)

                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Yadda saxla" />
                </div>
            }

        </div>
    </div>

    <!-- DataTables -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Meqale</th>
                            <th>Shekil</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Meqale</th>
                            <th>Shekil</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model.Tests)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Text</td>
                            <td><img src="~/Content/SiteImages/@item.Photo" class="table-photo" /></td>
                            <td> @Html.ActionLink("Redakte et", "Edit", "Test", new { id = item.id }, new { @class = "btn btn-warning" }) </td>
                            <td> <button data-id="@item.id" data-url="@Url.Action("Delete","Test")" class="btn btn-danger btn-remove"> Sil </button> </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

</div>
<!-- /.container-fluid -->
