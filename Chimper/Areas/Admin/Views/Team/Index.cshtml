@model Chimper.Areas.ViewModel.TeamViewModel
<div class="container-fluid">

    <!-- Cover photo-->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/SiteImages/@Model.Cover" class="cover-photo w-100" />
            <input type="file" data-path="@Url.Content("~/Content/SiteImages/")" data-url="@Url.Action("Photo","Team")" name="coverPhoto" class="cover-uploader" />
            <i class="far fa-images change-photo"></i>
            <h6 class="position-absolute text-primary bg-white p-1" style="top:20px;"> About cover </h6>
        </div>
    </div>

    <!-- Form -->

    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 offset-0">

            @using (Html.BeginForm(Model.Action, "Team", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Name)
                    @Html.TextBoxFor(m => m.Team.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Team.Name)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Surname)
                    @Html.TextBoxFor(m => m.Team.Surname, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Team.Surname)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Profession)
                    @Html.TextBoxFor(m => m.Team.Profession, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Photo)<br />
                    <input type="file" name="file" />
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.About)
                    @Html.TextAreaFor(m => m.Team.About, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Team.About)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Facebook)
                    @Html.TextBoxFor(m => m.Team.Facebook, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Twitter)
                    @Html.TextBoxFor(m => m.Team.Twitter, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Linkedin)
                    @Html.TextBoxFor(m => m.Team.Linkedin, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Team.Instagram)
                    @Html.TextBoxFor(m => m.Team.Instagram, new { @class = "form-control" })
                </div>

                @Html.HiddenFor(m => m.Team.id)

                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Yadda saxla" />
                </div>
            }

        </div>
    </div>

    <!-- DataTables -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Vezifesi</th>
                            <th>Haqqinda</th>
                            <th>Shekil</th>
                            <th>Facebook</th>
                            <th>Twitter</th>
                            <th>Linkedin</th>
                            <th>Instagram</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Ad</th>
                            <th>Soyad</th>
                            <th>Vezifesi</th>
                            <th>Haqqinda</th>
                            <th>Shekil</th>
                            <th>Facebook</th>
                            <th>Twitter</th>
                            <th>Linkedin</th>
                            <th>Instagram</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model.Teams)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Profession</td>
                            <td>
                                @if (item.About == null)
                                {
                                    <span> no about </span>
                                }
                                @if (item.About.Length > 12)
                                {
                                    <span> @item.About.Substring(0, 7)... </span>
                                }
                                else
                                {
                                    <span> @item.About </span>
                                }
                            </td>


                            <td><img src="~/Content/SiteImages/@item.Photo" class="table-photo" /></td>
                            <td>
                                @if (item.Facebook == null)
                                {
                                    <span> no address </span>
                                }
                                @if (item.Facebook.Length > 7)
                                {
                                    <span> @item.Facebook.Substring(0, 7)... </span>
                                }
                                else
                                {
                                    <span> @item.Facebook </span>
                                }
                            </td>
                            <td>
                                @if (item.Twitter == null)
                                {
                                    <span> no address </span>
                                }
                                @if (item.Twitter.Length > 7)
                                {
                                    <span> @item.Twitter.Substring(0, 7)... </span>
                                }
                                else
                                {
                                    <span> @item.Twitter </span>
                                }
                            </td>
                            <td>
                                @if (item.Linkedin == null)
                                {
                                    <span> no address </span>
                                }
                                @if (item.Linkedin.Length > 7)
                                {
                                    <span> @item.Linkedin.Substring(0, 7)... </span>
                                }
                                else
                                {
                                    <span> @item.Linkedin </span>
                                }
                            </td>
                            <td>
                                @if (item.Instagram == null)
                                {
                                    <span> no address </span>
                                }
                                @if (item.Linkedin.Length > 7)
                                {
                                    <span> @item.Instagram.Substring(0, 7) ...</span>
                                }
                                else
                                {
                                    <span> @item.Instagram </span>
                                }
                            </td>

                            <td> @Html.ActionLink("Redakte et", "Edit", "Team", new { id = item.id }, new { @class = "btn btn-warning" }) </td>
                            <td> <button data-id="@item.id" data-url="@Url.Action("Delete","Team")" class="btn btn-danger btn-remove"> Sil </button> </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

</div>
<!-- /.container-fluid -->
