@model Chimper.Areas.ViewModel.WorksViewModel
<div class="container-fluid">

    <!-- Cover photo-->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/SiteImages/@Model.Cover" class="cover-photo w-100" />
            <input type="file" data-path="@Url.Content("~/Content/SiteImages/")" data-url="@Url.Action("Photo","Works")" name="coverPhoto" class="cover-uploader" />
            <i class="far fa-images change-photo"></i>
            <h6 class="position-absolute text-primary bg-white p-1" style="top:20px;"> Works cover </h6>
        </div>
    </div>

    <!-- Form -->

    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 offset-0">

            @using (Html.BeginForm(Model.Action, "Works", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Portfolio.Header)
                    @Html.TextBoxFor(m => m.Portfolio.Header, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m=> m.Portfolio.Header)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Portfolio.Description)
                    @Html.TextBoxFor(m => m.Portfolio.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Portfolio.Description)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Portfolio.Photo)
                    <input type="file" name="file" />
                </div>

                @Html.HiddenFor(m=> m.Portfolio.id)

                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Yadda saxla" />
                </div>
            }

        </div>
    </div>

    <!-- DataTables -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Basliq</th>
                            <th>Icerik</th>
                            <th>Shekil</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Basliq</th>
                            <th>Icerik</th>
                            <th>Shekil</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model.Portfolios)
                        {
                        <tr>
                            <td>@item.Header</td>
                            <td>@item.Description</td>
                            <td><img src="~/Content/SiteImages/@item.Photo" class="table-photo" /></td>
                            <td> @Html.ActionLink("Redakte et", "Edit", "Works", new { id = item.id },new {@class ="btn btn-warning" }) </td>
                            <td> <button data-id="@item.id" data-url="@Url.Action("Delete","Works")" class="btn btn-danger btn-remove"> Sil </button> </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

</div>
<!-- /.container-fluid -->
