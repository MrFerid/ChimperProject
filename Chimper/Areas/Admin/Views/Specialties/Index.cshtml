@model Chimper.Areas.ViewModel.SpecViewModel
<div class="container-fluid">

    <!-- Cover photo-->
    <div class="row">
        <div class="col-lg-12">
            <img src="~/Content/SiteImages/@Model.Cover" class="cover-photo w-100" />
            <input type="file" data-path="@Url.Content("~/Content/SiteImages/")" data-url="@Url.Action("Photo","Specialties")" name="coverPhoto" class="cover-uploader" />
            <i class="far fa-images change-photo"></i>
            <h6 class="position-absolute text-primary bg-white p-1" style="top:20px;"> Specialty photo </h6>
        </div>
    </div>

    <!-- Form -->

    <div class="row">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2 col-12 offset-0">

            @using (Html.BeginForm(Model.Action, "Specialties", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Specialy.Header)
                    @Html.TextBoxFor(m => m.Specialy.Header, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Specialy.Header)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Specialy.Text)
                    @Html.TextBoxFor(m => m.Specialy.Text, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Specialy.Text)
                </div>

                <div class="form-group radio-group">
                    @Html.LabelFor(m => m.Specialy.Icon)<br />
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-laptop2", new { id = "m", @class = "custom-radio" })            <label for="m"><span class="icon-laptop2 radio-icon"></span></label>
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-shopping_cart", new { id = "m1", @class = "custom-radio" })     <label for="m1"><span class="icon-shopping_cart radio-icon"></span></label>
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-question_answer", new { id = "m2", @class = "custom-radio" })   <label for="m2"><span class="icon-question_answer radio-icon"></span></label>
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-format_paint", new { id = "m3", @class = "custom-radio" })      <label for="m3"><span class="icon-format_paint radio-icon"></span></label>
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-extension", new { id = "m4", @class = "custom-radio" })         <label for="m4"><span class="icon-extension radio-icon"></span></label>
                    @Html.RadioButtonFor(m => m.Specialy.Icon, "icon-phonelink", new { id = "m5", @class = "custom-radio" })         <label for="m5"><span class="icon-phonelink radio-icon"></span></label>
                </div>
                
                @Html.HiddenFor(m => m.Specialy.id)

                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Yadda saxla" />
                </div>
            }

        </div>
    </div>

    <!-- DataTables -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Basliq</th>
                            <th>Mezmun</th>
                            <th>Icon</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Basliq</th>
                            <th>Mezmun</th>
                            <th>Icon</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>

                        @foreach (var item in Model.Specialties)
                        {
                            <tr>
                                <td>@item.Header</td>
                                <td>@item.Text</td>
                                <td> <span class="@item.Icon" style="color: rgb(0, 60, 156); font-size:28px;"></span> </td>
                                <td> @Html.ActionLink("Redakte et", "Edit", "Specialties", new { id = item.id }, new { @class = "btn btn-warning" }) </td>
                                <td> <button data-id="@item.id" data-url="@Url.Action("Delete","Specialties")" class="btn btn-danger btn-remove"> Sil </button> </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>

</div>
<!-- /.container-fluid -->
